@model CarWorkshopManagementSystem.Models.ServiceOrder

@{
    ViewData["Title"] = "Utwórz zlecenie";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="VehicleId" class="control-label">Wybierz pojazd</label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles">
                    <option value="">-- Wybierz pojazd --</option>
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Opis problemu</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AssignedMechanicId" class="control-label">Przypisz mechanika</label>
                <select asp-for="AssignedMechanicId" class="form-control" asp-items="ViewBag.Mechanics">
                    <option value="">-- Opcjonalnie --</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}