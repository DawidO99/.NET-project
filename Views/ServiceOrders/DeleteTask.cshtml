@model CarWorkshopManagementSystem.Models.ServiceTask

@{
    ViewData["Title"] = "Usuń Zadanie";
}

<h1>Usuń Zadanie</h1>

<h3>Czy na pewno chcesz usunąć to zadanie?</h3>
<div>
    <h4>Zadanie @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaborCost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LaborCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="DeleteTask" asp-route-id="@Model.Id" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.ServiceOrderId" class="btn btn-secondary">Anuluj</a>
    </form>
</div>