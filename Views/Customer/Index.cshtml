@using CarWorkshopManagementSystem.Models
@model List<Customer>

<h2>Lista klientów</h2>

<p>
    <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">Dodaj klienta</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Imię i nazwisko</th>
            <th>Telefon</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FullName</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info">Szczegóły</a> |
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">Edytuj</a> |
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger">Usuń</a> @* <-- DODANY LINK DO USUWANIA *@
                </td>
            </tr>
        }
    </tbody>
</table>