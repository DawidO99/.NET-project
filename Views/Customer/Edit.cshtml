@using CarWorkshopManagementSystem.DTOs
@model CustomerUpdateDto

@{
    ViewData["Title"] = "Edytuj Klienta";
}

<h1>Edytuj Klienta</h1>

<h4>Klient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" /> @* DODANO Z POWROTEM: Ukryte pole dla Id * - TERAZ JEST POTRZEBNE! *@

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Powrót do listy</a> |
    @* Zmieniono link do szczegółów, aby używał Model.Id, ponieważ teraz CustomerUpdateDto je ma *@
    <a asp-action="Details" asp-route-id="@Model.Id">Powrót do szczegółów</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}