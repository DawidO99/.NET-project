@model CarWorkshopManagementSystem.Models.Part

@{
    ViewData["Title"] = "Edytuj Część"; // Poprawiony tytuł widoku
}

<h1>Edytuj Część</h1>

<h4>Część</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"> @* POPRAWIONE: asp-action="Edit" *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" /> @* DODANE: Ukryte pole dla Id *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Zapisz" class="btn btn-primary" /> @* POPRAWIONE: value="Zapisz" *@
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}