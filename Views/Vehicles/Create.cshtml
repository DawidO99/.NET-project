@model CarWorkshopManagementSystem.Models.Vehicle
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Dodaj Pojazd";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label">Właściciel</label>
                @* SelectList przekazany z kontrolera będzie już zawierał wybraną wartość, jeśli model.CustomerId jest ustawione *@
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
                    <option value="">-- Wybierz klienta --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegistrationNumber" class="control-label">Numer rejestracyjny</label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Year" class="control-label">Rok produkcji</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            @* Pole dla ImageUrl będzie dodane później przy funkcjonalności uploadu plików *@
            @* <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="control-label">URL Zdjęcia</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}